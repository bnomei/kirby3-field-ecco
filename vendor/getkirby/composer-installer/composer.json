{
    "name": "getkirby/composer-installer",
    "description": "Kirby's custom Composer installer for the Kirby CMS",
    "type": "composer-plugin",
    "license": "MIT",
    "homepage": "https://getkirby.com",
    "require": {
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.3",
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Kirby\\ComposerInstaller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kirby\\ComposerInstaller\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --stderr --coverage-html=tests/coverage"
    },
    "extra": {
        "class": "Kirby\\ComposerInstaller\\Plugin"
    }
}
